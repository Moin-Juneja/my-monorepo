{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "start:frontend": "npm run start --workspace frontend",
    "start:backend": "npm run start --workspace backend",
    "docker:build:frontend": "cd frontend && docker build -t frontend:v1 .",
    "docker:build:backend": "cd backend && docker build -t backend:v1 .",
    "start:backend:dev": "npm --workspace backend run start:dev",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend:dev\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
